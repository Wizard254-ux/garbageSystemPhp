							"mode": "raw",
							"raw": "{\n  \"client_id\": 12\n}"
						},
						"url": {
							"raw": "{{base_url}}/driver/pickups/mark",
							"host": ["{{base_url}}"],
							"path": ["driver", "pickups", "mark"]
						},
